    "behaviorRules": [
      {
        "when": [ "STATUS_DEAD" ],
        "then": "BE_DEAD"
      },
      {
        "when": [
          "STATUS_AGE_BABY",
          ["STATUS_WASTE_DIRTY", "STATUS_TEMP_COLD", "STATUS_TEMP_BURNING", "STATUS_FOOD_HUNGRY"]
        ],
        "then": "BE_BABY_SAD"
      },
      {
        "when": ["STATUS_AGE_BABY", "STATUS_SLEEP_ASLEEP"],
        "then": "BE_BABY_ASLEEP"
      },
      {
        "when": ["STATUS_AGE_BABY"],
        "then": "BE_BABY_IDLE"
      },

      {
        "when": ["STATUS_AGE_ADULT", "STATUS_TEMP_BURNING"],
        "then": "BE_ADULT_BURNING"
      },
      {
        "when": ["STATUS_AGE_ADULT", "STATUS_TEMP_COLD"],
        "then": "BE_ADULT_RAW_SAD"
      },
      {
        "when": ["STATUS_AGE_ADULT", ["STATUS_TEMP_COLD", "STATUS_TEMP_NORMAL"], [ "STATUS_FOOD_HUNGRY", "STATUS_WASTE_DIRTY" ]],
        "then": "BE_ADULT_RAW_SAD"
      },
      {
        "when": ["STATUS_AGE_ADULT", "STATUS_TEMP_NORMAL", "STATUS_SLEEP_ASLEEP"],
        "then": "BE_ADULT_RAW_SLEEP"
      },
      {
        "when": ["STATUS_AGE_ADULT", "STATUS_TEMP_NORMAL"],
        "then": "BE_ADULT_RAW_IDLE"
      },
      {
        "when": ["STATUS_AGE_ADULT", "STATUS_TEMP_HOT", "STATUS_CLOTHES_DRESSED", "STATUS_SLEEP_ASLEEP"],
        "then": "BE_ADULT_DRESSED_SLEEP"
      },
      {
        "when": ["STATUS_AGE_ADULT", "STATUS_TEMP_HOT", "STATUS_CLOTHES_DRESSED"],
        "then": "BE_ADULT_DRESSED_IDLE"
      },
      {
        "when": ["STATUS_AGE_ADULT", "STATUS_TEMP_HOT", "STATUS_SLEEP_ASLEEP"],
        "then": "BE_ADULT_COOKED_SLEEP"
      },
      {
        "when": ["STATUS_AGE_ADULT", "STATUS_TEMP_HOT"],
        "then": "BE_ADULT_COOKED_IDLE"
      },
      {
        "when": [],
        "then": "BE_NORMAL"
      }
